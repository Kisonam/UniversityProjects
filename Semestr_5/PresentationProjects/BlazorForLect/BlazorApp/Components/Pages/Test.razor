@rendermode InteractiveServer
@page "/formularz"
@using System.Text

<h3>Formularz - Wprowadź dane studenta</h3>

<div class="form-container">
    <form>
        <div class="form-group">
            <label for="name">Imię:</label>
            <input id="name" @bind="StudentData.Name" placeholder="Wprowadź imię" />
        </div>
        <div class="form-group">
            <label for="surname">Nazwisko:</label>
            <input id="surname" @bind="StudentData.Surname" placeholder="Wprowadź nazwisko" />
        </div>
        <div class="form-group">
            <label for="studentId">ID Studenta:</label>
            <input id="studentId" @bind="StudentData.StudentId" placeholder="Wprowadź ID studenta" />
        </div>
        <button type="button" class="btn btn-primary" @onclick="ShowCard">Zatwierdź</button>
    </form>
</div>

@if (IsCardVisible)
{
    <div class="business-card">
        <div class="card-header">
            <h4>Wizytówka Studenta</h4>
        </div>
        <div class="card-body">
            <p><strong>Imię i Nazwisko:</strong> @StudentData.Name @StudentData.Surname</p>
            <p><strong>ID Studenta:</strong> @StudentData.StudentId</p>
        </div>
    </div>
}

@code {
    private StudentDataModel StudentData = new StudentDataModel();
    private bool IsCardVisible = false;

    private void ShowCard()
    {
        IsCardVisible = true;
    }

    public class StudentDataModel
    {
        public string Name { get; set; } = string.Empty;
        public string Surname { get; set; } = string.Empty;
        public string StudentId { get; set; } = string.Empty;
    }
}

